{% from '@templates/macros/lib.twig' import img %}

{% set image = block.image.toFile %}

{% if image %}

    {% set caption = block.caption %}
    {% set ratio = block.ratio ?? '' %}

    {% set width = width ?? 2000 %} {# TODO: Adjust to context #}

    <figure>
        {{ img(image, {
            transform: {width: width, ratio: ratio},
            attr: {
                class: 'object-cover h-full w-full',
                loading: 'lazy'
            },
            mode: block.crop.isTrue ? 'crop' : 'resize'
        } ) }}
        {% if caption.isNotEmpty %}
            <figcaption>
                {{ caption }}
            </figcaption>
        {% endif %}
    </figure>
{% endif %}

