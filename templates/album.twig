{% extends "@templates/layouts/main.twig" %}

{% from '@templates/macros/lib.twig' import img %}

{% block content %}

    <article>
        {% include '@templates/partials/intro.twig' %}

        <div class="grid grid-cols-3 gap-8">

            <div class="col-span-1">
                <div class="prose">
                    {{ page.text|raw }}
                </div>
            </div>

            <div class="col-span-2">
                <ul class="columns-2 gap-6">
                    {% for image in gallery %}
                        <li class="mb-6">
                            <a href="{{ image.url }}" data-lightbox>
                                <figure>
                                    {{ img(image, {
                                        transform: {width: 800},
                                        mode: 'resize'
                                    }) }}
                                </figure>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>

    </article>


{% endblock %}
